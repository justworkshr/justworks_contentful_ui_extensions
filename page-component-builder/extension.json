{
  "id": "page-component-builder",
  "name": "page-component-builder",
  "srcdoc": "./build/index.html",
  "parameters": {
    "instance": [
      {
        "id": "patternLibraryScope",
        "name": "Pattern Library Scope",
        "description": "Define the scope of patterns that should be available in the library.",
        "type": "Enum",
        "options": [{"pattern": "Patterns"}, {"lesson": "Lesson Blocks"}],
        "default": "pattern",
        "labels": {"empty": "Choose the pattern library scope."},
        "required": true
      }
    ],
    "installation": [
      {
        "id": "productionUrl",
        "type": "Symbol",
        "name": "Production URL",
        "default": "https://justworks.com",
        "required": true
      },
      {
        "id": "stagingUrl",
        "type": "Symbol",
        "name": "Staging URL",
        "default": "https://justworks-staging-v2.herokuapp.com",
        "required": true
      }
    ]
  }
}
